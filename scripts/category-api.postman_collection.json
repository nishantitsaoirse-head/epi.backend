{
  "info": {
    "name": "Category Management API",
    "description": "Complete Category Management API endpoints for Epi Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public - Get Categories for Dropdown",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/categories/dropdown/all",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", "dropdown", "all"]
        },
        "description": "Get all active main categories with their subcategories (for product creation dropdown)"
      },
      "response": []
    },
    {
      "name": "Public - Get All Categories",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/categories?parentCategoryId=null&isActive=true",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories"],
          "query": [
            {
              "key": "parentCategoryId",
              "value": "null",
              "disabled": false
            },
            {
              "key": "isActive",
              "value": "true",
              "disabled": false
            }
          ]
        },
        "description": "Get all main categories with filters"
      },
      "response": []
    },
    {
      "name": "Public - Get Category by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/categories/{{categoryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", "{{categoryId}}"]
        },
        "description": "Get a single category with parent and subcategories"
      },
      "response": []
    },
    {
      "name": "Public - Get Category with Subcategories",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/categories/{{categoryId}}/with-subcategories",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", "{{categoryId}}", "with-subcategories"]
        },
        "description": "Get category with all nested subcategories"
      },
      "response": []
    },
    {
      "name": "Public - Search Categories",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/categories/search/mobile",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", "search", "mobile"]
        },
        "description": "Search categories by name, description, or slug"
      },
      "response": []
    },
    {
      "name": "Admin - Create Main Category",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Electronics\",\n  \"description\": \"All electronic products and gadgets\",\n  \"displayOrder\": 1,\n  \"image\": {\n    \"url\": \"https://example.com/electronics.jpg\",\n    \"altText\": \"Electronics Category\"\n  },\n  \"meta\": {\n    \"title\": \"Electronics Store\",\n    \"description\": \"Browse our electronics collection\",\n    \"keywords\": [\"electronics\", \"gadgets\", \"devices\"]\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/categories",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories"]
        },
        "description": "Create a new main category"
      },
      "response": []
    },
    {
      "name": "Admin - Create Subcategory",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Mobile Phones\",\n  \"description\": \"All types of mobile phones\",\n  \"parentCategoryId\": \"{{mainCategoryId}}\",\n  \"displayOrder\": 1,\n  \"image\": {\n    \"url\": \"https://example.com/mobile-phones.jpg\",\n    \"altText\": \"Mobile Phones\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/categories",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories"]
        },
        "description": "Create a subcategory under a main category"
      },
      "response": []
    },
    {
      "name": "Admin - Update Category",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Electronics & Gadgets\",\n  \"description\": \"Updated description\",\n  \"displayOrder\": 2,\n  \"isActive\": true,\n  \"meta\": {\n    \"title\": \"Electronics & Gadgets Store\",\n    \"keywords\": [\"electronics\", \"gadgets\"]\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/categories/{{categoryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", "{{categoryId}}"]
        },
        "description": "Update category details"
      },
      "response": []
    },
    {
      "name": "Admin - Delete Category",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/categories/{{categoryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", "{{categoryId}}"]
        },
        "description": "Delete a category (fails if it has subcategories)"
      },
      "response": []
    },
    {
      "name": "Admin - Delete Category (Force)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/categories/{{categoryId}}?force=true",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", "{{categoryId}}"],
          "query": [
            {
              "key": "force",
              "value": "true"
            }
          ]
        },
        "description": "Force delete a category including all subcategories"
      },
      "response": []
    },
    {
      "name": "Admin - Bulk Reorder Categories",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{adminToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"categories\": [\n    {\n      \"id\": \"{{categoryId1}}\",\n      \"displayOrder\": 1\n    },\n    {\n      \"id\": \"{{categoryId2}}\",\n      \"displayOrder\": 2\n    },\n    {\n      \"id\": \"{{categoryId3}}\",\n      \"displayOrder\": 3\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/categories/bulk/reorder",
          "host": ["{{baseUrl}}"],
          "path": ["api", "categories", "bulk", "reorder"]
        },
        "description": "Update display order for multiple categories"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "your_admin_jwt_token_here",
      "type": "string"
    },
    {
      "key": "categoryId",
      "value": "category_id_here",
      "type": "string"
    },
    {
      "key": "mainCategoryId",
      "value": "main_category_id_here",
      "type": "string"
    },
    {
      "key": "categoryId1",
      "value": "first_category_id",
      "type": "string"
    },
    {
      "key": "categoryId2",
      "value": "second_category_id",
      "type": "string"
    },
    {
      "key": "categoryId3",
      "value": "third_category_id",
      "type": "string"
    }
  ]
}
